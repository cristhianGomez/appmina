<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl1"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Descripcion:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/lbl_title"
            style="@style/Text.Primary"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/lbl1"
            app:layout_constraintHorizontal_bias="0.241"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lorem ipsum sit dolar amet whatever" />

        <TextView
            android:id="@+id/lbl3"
            style="@style/Text.Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="F. Mant:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl1" />

        <TextView
            android:id="@+id/lbl_mant_date"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="27dp"
            android:text="06/01/2017"
            app:layout_constraintStart_toEndOf="@+id/lbl3"
            app:layout_constraintTop_toTopOf="@+id/lbl1" />

        <TextView
            android:id="@+id/lbl2"
            style="@style/Text.Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="F.Prox.Mant:"
            app:layout_constraintStart_toEndOf="@+id/lbl_mant_date"
            app:layout_constraintTop_toBottomOf="@+id/lbl_title" />

        <TextView
            android:id="@+id/lbl_next_mant_date"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/lbl2"
            app:layout_constraintTop_toBottomOf="@+id/lbl_title"
            tools:text="06/01/2017" />

        <TextView
            android:id="@+id/lbl4"
            style="@style/Text.Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Autor:"
            app:layout_constraintStart_toStartOf="@+id/lbl3"
            app:layout_constraintTop_toBottomOf="@+id/lbl3" />

        <TextView
            android:id="@+id/lbl_author"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Tomas prueba"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lbl4"
            tools:text="Tomas prueba" />

        <ImageButton
            android:id="@+id/img_delete"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp"
            android:alpha=".86"
            android:background="@color/colorTransparentWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/delete_icon" />

        <ImageButton
            android:id="@+id/img_edit"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@color/colorTransparentWhite"
            android:layout_marginBottom="0dp"
            android:alpha=".86"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_delete"
            app:srcCompat="@drawable/edit_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>